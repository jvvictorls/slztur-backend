{
  "compilerOptions": {
    "target": "es2019",
    "esModuleInterop": true,
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "src/*": [
        "*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "src/tests",
    "node_modules",
    "build"
  ]
}
